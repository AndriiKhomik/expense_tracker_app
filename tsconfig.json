{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true, // https://material-ui.com/guides/typescript/#typescript
    "noImplicitThis": true, // https://material-ui.com/guides/typescript/#typescript
    "strictNullChecks": true, // https://material-ui.com/guides/typescript/#typescript
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ]
}